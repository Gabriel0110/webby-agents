// tsconfig.base.json

{
    "compilerOptions": {
      "target": "ES2019",
      "moduleResolution": "node",
      "lib": ["ES2019", "DOM"],
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": false
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "**/__tests__"
    ]
  }
  